@using CoinyProject.Application.DTO.Discussion
@model DiscussionGetForViewDTO

<div class="col-lg-6">
    <div class="card">
        <div class="row g-0">
            <div class="col-6 col-md-12">
                <div class="card-body d-flex flex-column">
                    <div class="text-muted">
                        <span>
                            Author: @Model.Username
                        </span>
                        <span class="text-primary rounded border border-primary px-2 py-1">
                            Topic: @Model.Topic
                        </span>
                    </div>
                    <div class="h-100">
                        <h4 class="card-title">@Model.Name</h4>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div>
                            <a asp-action="Index" asp-controller="Discussion" asp-route-id="@Model.Id"
                               class="btn btn-primary">@Localizer["View Discussion"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
