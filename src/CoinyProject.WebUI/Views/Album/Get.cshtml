@    using CoinyProject.Application.DTO
@    using CoinyProject.Core.Domain.Entities
@    using Microsoft.AspNetCore.Identity
@model AlbumGetByIdDTO
@inject UserManager<User> UserManager

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary">@Model.Name</h2>
                    <p class="text-primary">@(string.IsNullOrEmpty(Model.Description) ? Localizer["Description is not available"] : Model.Description)</p>
                </div>
                <div class="col-6 text-end">
                    <div class="row-cols-3">
                        @if (Model.UserId == UserManager.GetUserId(User))
                        {
                            <a asp-controller="Album" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> @Localizer["Go Back"]
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> @Localizer["Go Back"]
                            </a>
                        }
                    </div>
                    @if (Model.UserId == UserManager.GetUserId(User))
                    {
                        <div class="pt-3 ">
                            <a asp-controller="AlbumElement" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-plus-circle"></i> @Localizer["Add Element"]
                            </a>
                            <a asp-controller="Album" asp-action="Edit" asp-route-id="@Model.Id" class="row-cols-5 btn btn-warning">
                                <i class="bi bi-pencil"></i> @Localizer["Edit"]
                            </a>
                            <a asp-controller="Album" asp-action="Delete" asp-route-id="@Model.Id" class=" row-cols-5 btn btn-danger">
                                <i class="bi bi-trash"></i> @Localizer["Delete"]
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row">
            @foreach (var element in Model.Elements)
            {
                TempData["isOwner"] = Model.UserId == UserManager.GetUserId(User);
                <div class="col-md-3 mb-3">
                    <partial name="_AlbumElementView" model="@element" />
                </div>
            }
        </div>
    }
</div>
